<section class="slice slice-lg sec-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">

        <div class="form-user style-1 rounded has-shadow-1">
          <div class="form0header text-center">
            <h2 class="form-header-title">ユーザーログイン</h2>
          </div>

          <div class="form-body">
            <%= form_with model:@user, url: user_registration_path, id: "new_user", class: "new_user", local: true do |f| %>
              <%= render "devise/shared/error_messages", resouce: resource %>
              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputName">Name</label>
                <%= f.text_field :name, autofocus: true, class: "form-control", id: "inputNae", placeholder: "Name" %>
                <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
              </div>
              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputEmail">Email</label>
                <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "EmailAddress" %>
                <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
              </div>
              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputPassword">Password</label>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: "Password" %>
                <span nclass="fa fa-lock form-control-icon" aria-hidden="true"></span>
              </div>
              <div class="form-group has-icon">
                <label class="control-label sr-only" for="inputConfirmPassword">Password</label>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "inputConfirmPassword", placeholder: "PasswordAgain" %>
                <span class="fa fa-check-circle-o form-control-icon" aria-hidden="true"></span>
              </div>
              <%= f.submit "新規登録", class: "btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>